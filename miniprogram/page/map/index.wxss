.flex {
  display: flex;
}
.card {
  margin-top: 80vh;
  margin-left: 4vw;
  margin-right: 4vw;
  width: 92vw;
  height: 18vh;
  background: #ffffff;
  box-shadow: 0px 10px 18px 2px rgba(13, 54, 137, 0.05);
  border-radius: 10px;
}
.zindex1 {
  position: absolute;
  z-index: 2;
}
.add-wrap {
  z-index: 10;
  position: fixed;
  bottom: 2vh;
  display: flex;
  width: 100%;
  justify-content: center;
}
.title {
  color: #141418;
  font-weight: bold;
}
.detail {
  font-size: 30rpx;
  line-height: 60rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #97979f;
}
.pd {
  padding: 30rpx;
}
